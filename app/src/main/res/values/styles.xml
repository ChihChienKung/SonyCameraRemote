<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="CustomTheme"></style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/gray_ff505050</item>
        <item name="android:textColor">@drawable/text_light</item>
        <item name="android:textColorPrimary">@color/gray_ffe1e1e1</item>
        <!--<item name="colorPrimary">@color/gray_ff404040</item>-->
        <!--<item name="colorPrimaryDark">@color/gray_ff303030</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="FloatingActionButton">
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="android:layout_margin">@dimen/floating_action_button_margin</item>
    </style>
</resources>
